###############################################################################
# Generic variables
###############################################################################
CXX=clang++
LD=clang++

CPP_FLAGS=-std=c++11 -Wall -O3

###############################################################################
# Generic rules
###############################################################################
%.o : %.cpp
	@echo "[ CXX] $@"
	@$(CXX) $(CPP_FLAGS) $(INC_DIR) -o $@ -c $^

%.cpp : %.re2c.cpp
	@echo "[RE2C] $@"
	@re2c -i $^ > $@